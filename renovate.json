{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":timezone(Europe/Brussels)",
    ":prHourlyLimitNone",
    ":rebaseStalePrs"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": ["lib/**"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch",
      "automergeSchedule": "* 1-4 * * *",
      "ignoreTests": true
    }
  ],
  "schedule": ["* 19-22 * * *"]
}
