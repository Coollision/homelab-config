{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": ["lib/**"]
  },
  "timezone": "Europe/Brussels",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch",
      "automergeSchedule": ["* 22 * * *"],
      "ignoreTests": true
    }
  ]
}
