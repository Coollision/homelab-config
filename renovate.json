{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":timezone(Europe/Brussels)"],
  "schedule": ["after 7pm and before 10pm"],
  "packageRules": [
    {
      "description": "System & ArgoCD - automerge patch and minor",
      "matchFileNames": ["system/**", "argocd/**"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "platformAutomerge": true,
      "automergeSchedule": ["after 1am and before 4am"]
    },
    {
      "description": "System majors - individual PRs",
      "matchFileNames": ["system/**"],
      "matchUpdateTypes": ["major"]
    },
    {
      "description": "ArgoCD majors - individual PRs",
      "matchFileNames": ["argocd/**"],
      "matchUpdateTypes": ["major"]
    },
    {
      "description": "Workload - automerge patch only",
      "matchFileNames": ["workload/**"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "platformAutomerge": true,
      "automergeSchedule": ["after 1am and before 4am"]
    },
    {
      "description": "Workload minors - individual PRs",
      "matchFileNames": ["workload/**"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "description": "Workload majors - individual PRs",
      "matchFileNames": ["workload/**"],
      "matchUpdateTypes": ["major"]
    }
  ]
}
