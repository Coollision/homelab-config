{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Europe/Brussels)",
    ":prHourlyLimitNone",
    ":rebaseStalePrs"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": ["lib/**"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["ghcr.io/coollision/mqtt-go-playground"],
      "updateTypes": ["digest"],
      "matchPaths": ["workload/smarthome/mqtt-playground/values.yaml"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch",
      "automergeSchedule": "* 1-4 * * *",
      "ignoreTests": true
    }
  ],
  "schedule": ["* 19-22 * * *"]
}
